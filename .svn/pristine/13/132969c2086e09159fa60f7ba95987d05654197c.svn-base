body {
    background: #F6F7F9;
}
header {
    height: 6.4rem;
}
header p {
    line-height:0;
    font-size: 0.36rem;
}
header .able {
    font-size: 0.18rem;
    width: 1.3rem;
    margin: 0.6rem auto 1rem;
}
header .num {
    font-size: 0.72rem;
    margin-top: 0.55rem;
    margin-bottom: 0.38rem;
}
header p.vd {
    padding-top: 0.68rem;
    margin-bottom: 0.48rem;
}

header input {
    width: 4.19rem;
    height: 0.59rem;
    color: #7ccaed;
    text-align: center;
    border-radius: 0.26rem;
    border: none;
    line-height: normal;
}

input::-webkit-input-placeholder { /* WebKit browsers*/
    color: #7ccaed;
}

header input.yourNum {
    margin: 0 auto;
    display: block;
}

header input.loan {
    width: 2.71rem;
    height: 0.6rem;
    display: block;
    margin: 0.47rem auto auto;
    background: #ffffff;
    color: #02B1FF;
}
header {
    background: url("../img/indexBg.png") no-repeat;
    background-size: cover;
}

.one img {
    height: 2.41rem;
    width: 100%;
    margin-top: 0.05rem;
    margin-bottom: 0.05rem;
}
.fmj {
    height: 0.7rem;
    border-bottom:1px solid #000000;
    position: relative;
}
.fmj span {
    line-height: 0.7rem;
    font-size: 0.3rem;
}
.fmj .top {
    position: absolute;
    right: -0.26rem;
    top: 0;
}
.fmj img {
    width: 0.46rem;
    height: 0.46rem;
    padding-right: 0.27rem;
    padding-left: 0.12rem;
}
.top img {
    width: 0.97rem;
    height: 1.02rem;
}
.kdje {
    margin-top: 0.05rem;
}
section .num {
    width: 1.67rem;
    height: 2.21rem;
    border-right: 0.01rem solid #000000;
}
/*section .data {*/
    /*width: 4.99rem;*/
/*}*/
.tip {
    height: 0.36rem;
    background: #FCF8AF;
    font-size: 0.16rem;
    line-height: 0.36rem;
    padding-left: 0.36rem;
    color: #868282;
}


section.three .home {
    margin: 0.11rem auto auto 1.18rem;
    text-align: center;
}

section.three .person {
    margin: 0.11rem 1.05rem auto auto;
    text-align: center;
}
section.three a img{
     width: 0.5rem;
     height: 0.5rem;
 }

section.three span {
    display: block;
    text-align: center;
}
section.three .home>span {
    color: #00ccff;
    width: 0.55rem;
    height: 0.28rem;
    font-size: 0.24rem;
 }
section.three .person>span {
    color: #aaaaaa;
    width: 1.13rem;
    height: 0.28rem;
    font-size: 0.2rem;
}
section p {
    font-size: 0.24rem;
    margin-top: 0.31rem;
    color: #000000;
}
section .kw {
    font-size: 0.36rem;
}
section .num {
    margin-left: 0.84rem;
}
section .data {
    position: relative;
}
.data p {
    margin-left: 0.51rem;
    position: absolute;
    left: 2.7rem;
}
.data p.time {
    top: 0.62rem;
}
.data input {
    border: solid 0.04rem #ff0000;
    border-radius: 0.18rem;
    width: 1.61rem;
    height: 0.48rem;
    font-size: 0.31rem;
    line-height: 0.29rem;
    color: #ff0000;
    background: transparent;
    position: absolute;
    right: 0.4rem;
    top: 1.52rem;
}